<apex:page controller="SalesDashboardTodaysTasksCtrl" action="{! init }" sidebar="false" showHeader="false">
    <apex:includeScript value="{!$Resource.jQuery}"/>
    <apex:includeScript value="{!URLFOR($Resource.Highcharts,'js/highcharts.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.Highcharts,'js/modules/exporting.js')}"/>
    <apex:form >
    <apex:pageBlock >
        <h1 style="margin-bottom: 10px; font-size: 15px; display: block;">New activities for 
            <apex:selectList value="{! selectedMonth }" size="1" multiselect="false" style="margin-left: 5px;">
                <apex:selectOptions value="{! currentMonths }"/>
                <apex:actionSupport action="{! init }" event="onchange"/>
            </apex:selectList> <apex:selectList value="{! selectedYear }" size="1" multiselect="false" style="margin: 0 5px;">
                <apex:selectOptions value="{! years }"/>
                <apex:actionSupport action="{! init }" event="onchange"/>
            </apex:selectList>({! startDateOfMonthString } - {! endDateOfMonthString })</h1>
        <apex:pageMessages />

        <apex:outputPanel rendered="{! OR(currentUser.Profile.Name == 'Salesteamleiter',currentUser.Profile.Name == 'Harte Hank Teamleiter') }">
            <div id="piechart" style="width: 30%; float: left; height: 300px;"></div>
            <div id="taskslead" style="width: 70%; float: left; height: 560px;"></div>
            <div style="clear:both;"></div>
        </apex:outputPanel>
        <apex:outputPanel rendered="{! OR(currentUser.Profile.Name == 'Sales',currentUser.Profile.Name == 'Harte Hanke (Sales)') }">
            <div id="taskssales" style="height: 150px;"></div>
        </apex:outputPanel>
    </apex:pageBlock>

    <script>
        $(function () {
            var todaysSalesMapJS = {};
            <apex:repeat value="{! todaysSalesMap }" var="key">
                todaysSalesMapJS["{! key }"] = "{! todaysSalesMap[key] }";
            </apex:repeat>

            $('#taskssales').highcharts({
                chart: {
                    type: 'bar'
                },
                title: {
                    text: '',
                    style: {
                        display: 'none'
                    }
                },
                xAxis: {
                    categories: [
                    ''
                    ]
                },
                yAxis: [{
                    min: 0,
                    title: {
                        text: ''
                    }
                }, {
                    title: {
                        text: 'Number of activities'
                    },
                    opposite: true
                }],
                legend: {
                    shadow: false
                },
                exporting: { enabled: false },
                credits: {
                      enabled: false
                },
                tooltip: {
                    enabled: false
                },
                plotOptions: {
                    column: {
                        grouping: false,
                        shadow: false,
                        borderWidth: 0
                    },
                    bar: {
                        dataLabels: {
                            enabled: true,
                            formatter: function () {
                                if (this.series.name == 'Number of activities') {
                                    return this.y + ' (' + {! todaysSalesTasks } + ' today)';   
                                } else {
                                    return this.y;  
                                }
                            }
                        }
                    }
                },
                series: [{
                    name: 'Plan',
                    color: 'rgba(165,170,217,1)',
                    data: [{! monthTasksPlan }],
                    color: '#ccc',
                    pointPadding: -0.5,
                    pointPlacement: -0.15
                }, {
                    name: 'Number of activities',
                    color: 'rgba(126,86,134,.9)',
                    data: [{! salesCurrentTasks }],
                    pointPadding: -0.5,
                    pointPlacement: 0.15
                }]
            });

            $('#taskslead').highcharts({
                chart: {
                    type: 'bar'
                },
                title: {
                    text: '',
                    style: {
                        display: 'none'
                    }
                },
                xAxis: {
                    categories: [
                    <apex:repeat value="{! salesTeamFinalList }" var="final">'{! final.Name }',</apex:repeat>
                    ]
                },
                yAxis: [{
                    min: 0,
                    title: {
                        text: ''
                    }
                }, {
                    title: {
                        text: 'Number of activities'
                    },
                    opposite: true
                }],
                legend: {
                    shadow: false,
                    labelFormatter: function() {
                      var total = 0;
                      for(var i=this.yData.length; i--;) { total += this.yData[i]; };
                      return this.name + ' - Total: ' + total;
                    }
                },
                exporting: { enabled: false },
                credits: {
                      enabled: false
                },
                tooltip: {
                    enabled: false
                },
                plotOptions: {
                    column: {
                        grouping: false,
                        shadow: false,
                        borderWidth: 0
                    },
                    bar: {
                        dataLabels: {
                            enabled: true,
                            formatter: function () {
                                if (this.series.name == 'Number of activities') {
                                    return this.y + ' (' + todaysSalesMapJS[this.x] + ' today)';    
                                } else {
                                    return this.y;  
                                }
                            }
                        }
                    }
                },
                series: [{
                    name: 'Plan',
                    color: 'rgba(165,170,217,1)',
                    data: [<apex:repeat value="{! salesTeamFinalList }" var="final">{! monthTasksPlan },</apex:repeat>],
                    color: '#ccc',
                    pointPadding: -0.5,
                    pointPlacement: -0.15
                }, {
                    name: 'Number of activities',
                    color: 'rgba(126,86,134,.9)',
                    data: [<apex:repeat value="{! salesTeamFinalList }" var="final">{! todaysTasks[final.Id] },</apex:repeat>],
                    pointPadding: -0.5,
                    pointPlacement: 0.15
                }]
            });

            $('#piechart').highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'pie'
                },
                title: {
                    text: 'Forecast: ([fact] * [performance days in a month] / [performance days passed]) / plan',
                    style: {
                        fontSize: '10px'
                    }
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.y:.1f}</b>'
                },
                credits: {
                      enabled: false
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: false
                        },
                        showInLegend: true
                    }
                },
                exporting: { enabled: false },
                series: [{
                    name: 'Activites Progress',
                    colorByPoint: true,
                    data: [{
                        name: 'less 50%',
                        y: {! salesLess50 }
                    }, {
                        name: '50-80%',
                        y: {! sales5080 }
                    }, {
                        name: '80-100%',
                        y: {! sales80100 }
                    }, {
                        name: '100+%',
                        y: {! salesMore100 }
                    }]
                }]
            });
        });
    </script>
    </apex:form>
</apex:page>
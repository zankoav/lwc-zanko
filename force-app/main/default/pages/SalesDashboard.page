<apex:page controller="SalesDashboardController" action="{! init }" sidebar="false" showheader="false">
    <apex:includeScript value="{!$Resource.jQuery}"/>
    <apex:includeScript value="{!URLFOR($Resource.Highcharts,'js/highcharts.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.Highcharts,'js/modules/exporting.js')}"/>
    <apex:form >
    <apex:pageBlock >
        <h1 style="margin-bottom: 10px; font-size: 15px; display: block;">Cards sold for 
            <apex:selectList value="{! selectedMonth }" size="1" multiselect="false" style="margin-left: 5px;">
                <apex:selectOptions value="{! currentMonths }"/>
                <apex:actionSupport action="{! init }" event="onchange"/>
            </apex:selectList> <apex:selectList value="{! selectedYear }" size="1" multiselect="false" style="margin: 0 5px;">
                <apex:selectOptions value="{! years }"/>
                <apex:actionSupport action="{! changeYear }" event="onchange"/>
            </apex:selectList>({! startDateOfMonthString } - {! endDateOfMonthString })</h1>
        <apex:pageMessages />
        <div>
            <apex:outputPanel rendered="{! OR(currentUser.Profile.Name == 'Salesteamleiter',currentUser.Profile.Name == 'Harte Hank Teamleiter') }">
                <div id="piechart" style="width: 30%; float: left; height: 300px;"></div>
                <div id="salesteamleader" style="width: 70%; float: left; height: 520px;"></div>
            </apex:outputPanel>
            <apex:outputPanel rendered="{! IF(OR(currentUser.Profile.Name == 'Harte Hanke (Sales)',currentUser.Profile.Name == 'Sales', currentUser.Profile.Name == 'Sales Inbound', currentUser.Profile.Name == 'CCS Sales Inbound', currentUser.Profile.Name == 'AllStar Sales'), TRUE, FALSE) }">
                <div id="sales" style="width: 100%; float: left; height: 150px;"></div>
            </apex:outputPanel>
            <div style="clear: both"></div>
        </div>
    </apex:pageBlock>

    <script>
        $(function () {
            var todaysSalesOppsMapJS = {};
            <apex:repeat value="{! todaysSalesOppsMap }" var="key">
                todaysSalesOppsMapJS["{! key }"] = "{! todaysSalesOppsMap[key] }";
            </apex:repeat>

            $('#salesteamleader').highcharts({
                chart: {
                    type: 'bar'
                },
                title: {
                    text: '',
                    style: {
                        display: 'none'
                    }
                },
                xAxis: {
                    categories: [
                    <apex:repeat value="{! finalList }" var="key">
                        '{! teamOppsPlanMap[key.Id].Name }',
                    </apex:repeat>
                    ]
                },
                yAxis: [{
                    min: 0,
                    title: {
                        text: ''
                    }
                }, {
                    title: {
                        text: 'Number of cards'
                    },
                    opposite: true
                }],
                legend: {
                    shadow: false,
                    labelFormatter: function() {
                      var total = 0;
                      for(var i=this.yData.length; i--;) { total += this.yData[i]; };
                      return this.name + ' - Total: ' + total;
                    }
                },
                exporting: { enabled: false },
                credits: {
                      enabled: false
                },
                tooltip: {
                    enabled: true
                },
                plotOptions: {
                    column: {
                        grouping: false,
                        shadow: false,
                        borderWidth: 0
                    },
                    bar: {
                        dataLabels: {
                            enabled: true,
                            formatter: function () {
                                if (this.series.name == 'Current Value') {
                                    return this.y + ' (' + todaysSalesOppsMapJS[this.x] + ' today)';    
                                } else {
                                    return this.y;  
                                }
                            }
                        }
                    }
                },
                series: [{
                    name: 'Plan',
                    color: '#ccc',
                    data: [<apex:repeat value="{! finalList }" var="key">
                    {! teamOppsPlanMap[key.Id].numberOfCards },
                </apex:repeat>],
                    pointPadding: -0.5,
                    pointPlacement: -0.15
                }, {
                    name: 'Current Value',
                    color: 'rgba(126,86,134,.9)',
                    data: [<apex:repeat value="{! finalList }" var="key">
                    {! teamOppsCardsMap[key.Id] },
                </apex:repeat>],
                    pointPadding: -0.5,
                    pointPlacement: 0.15
                }]
            });

            $('#piechart').highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'pie'
                },
                title: {
                    text: 'Forecast: ([fact] * [performance days in a month] / [performance days passed]) / plan',
                    style: {
                        fontSize: '10px'
                    }
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.y:.1f}</b>'
                },
                credits: {
                      enabled: false
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: false
                        },
                        showInLegend: true
                    }
                },
                exporting: { enabled: false },
                series: [{
                    name: 'Sales Progress',
                    colorByPoint: true,
                    data: [{
                        name: 'less 50%',
                        y: {! salesLess50 }
                    }, {
                        name: '50-80%',
                        y: {! sales5080 }
                    }, {
                        name: '80-100%',
                        y: {! sales80100 }
                    }, {
                        name: '100+%',
                        y: {! salesMore100 }
                    }]
                }]
            });

            $('#sales').highcharts({
                chart: {
                    type: 'bar'
                },
                title: {
                    text: '',
                    style: {
                        display: 'none'
                    }
                },
                xAxis: {
                    categories: [
                    ''
                    ]
                },
                yAxis: [{
                    min: 0,
                    title: {
                        text: ''
                    }
                }, {
                    title: {
                        text: 'Number of cards'
                    },
                    opposite: true
                }],
                legend: {
                    shadow: false
                },
                exporting: { enabled: false },
                credits: {
                      enabled: false
                },
                tooltip: {
                    enabled: false
                },
                plotOptions: {
                    column: {
                        grouping: false,
                        shadow: false,
                        borderWidth: 0
                    },
                    bar: {
                        dataLabels: {
                            enabled: true,
                            formatter: function () {
                                if (this.series.name == 'Current Value') {
                                    return this.y + ' (' + {! todaysOpps } + ' today)'; 
                                } else {
                                    return this.y;  
                                }
                            }
                        }
                    }
                },
                series: [{
                    name: 'Plan',
                    color: '#ccc',
                    data: [{! currentPlan.numberOfCards }],
                    pointPadding: -0.5,
                    pointPlacement: -0.15
                }, {
                    name: 'Current Value',
                    color: 'rgba(126,86,134,.9)',
                    data: [{! myNumberOfCards }],
                    pointPadding: -0.5,
                    pointPlacement: 0.15
                }]
            });
        });
    </script>
    </apex:form>
</apex:page>
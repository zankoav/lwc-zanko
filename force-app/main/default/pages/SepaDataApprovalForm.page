        <apex:outputPanel rendered="{! OR(country = 'Belgium-FR', country = 'Belgium-NL') }">
            <script>
                var regs = {
                    letters: /^[a-zA-ZÀ-ž\x7f-\xff\s'-]+$/,
                    swiftFormat: /^[A-Za-z]{4}[A-Za-z]{2}[A-Za-z0-9]{2}([A-Za-z0-9]{3})?$/,
                    ibanFormat: /^[Bb]{1}[Ee]{1}[0-9]{14}?$/
                };                                  
            </script>
        </apex:outputPanel>
